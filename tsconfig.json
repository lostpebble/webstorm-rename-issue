{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmitOnError": true,
    "removeComments": true,
    "declaration": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom", "esnext"]
  }
}
